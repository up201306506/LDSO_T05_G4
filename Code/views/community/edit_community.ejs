<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>

    <% include ./../templates/header.ejs %>
    <link rel="stylesheet" type="text/css" href="/stylesheets/community/edit_community.css">
</head>
<body>
<% include ./../templates/navbar.ejs %>

<div class="container-fluid">
	<div class="col-sm-2"></div>

	<div class="col-sm-8">
		<h1>Editar Comunidade</h1>
		<br>

		<form>
			<div class="form-horizontal">
				<div class="form-group">
					<label class="control-label col-sm-2" for="nome">Nome:</label>
					<div class="col-sm-10"><input type="text" class="form-control" id="nome" placeholder="<%= name %>"></div>
				</div>

				<div class="form-group">
					<label class="control-label col-sm-2" for="sede">Sede:</label>
					<div class="col-sm-10"><input type="text" class="form-control" id="sede" placeholder="<%= headQuartes %>"></div>
				</div>

				<div class="form-group">
					<label class="control-label col-sm-2" for="descricao">Descrição:</label>
					<div class="col-sm-10">
						<textarea class="form-control" id="descricao" rows="3" placeholder="<%= description %>"></textarea>
					</div>
				</div>

				<div class="form-group">
					<label class="control-label col-sm-2" for="categoria">Categoria:</label>
					<div class="col-sm-4">
						<select class="form-control" id="sel-categoria">
							<option>Geral</option>
							<option>Jardinagem</option>
							<option>Mecânica</option>
							<option>Materiais</option>
						</select>
					</div>

					<label class="control-label col-sm-2" for="visualizacao">Visualização:</label>
					<div class="col-sm-2">
						<select class="form-control" id="sel-visualizacao">
							<option>Pública</option>
							<option>Privada</option>
							<option>Secreta</option>
						</select>
					</div>
				</div>

				<div class="form-group" id="buttons-panel">
					<div class="col-sm-5"></div>
					<div id="save-button" class="col-sm-1"><button type="submit" class="btn btn-default">Guardar</button></div>
					<div class="col-sm-1"><button type="button" class="btn btn-default" onclick="location.href = '#'">Voltar</button></div>
				</div>
			</div>
		</form>
	</div>

	<div class="col-sm-2"></div>
</div>

</body>
</html>