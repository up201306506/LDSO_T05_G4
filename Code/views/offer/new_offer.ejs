<!DOCTYPE html>
<html>
    <head>
        <title> <%= title %> </title>
        <!-- Bootstrap & jQuery -->
        <% include ../templates/header.ejs %>
    </head>
    <body>
    <% include ../templates/login_navbar.ejs %>
        <div class="container">
            <h1> New Offer </h1><br>
        </div>
        <div class="container">
            <form action="/login" method="post">

                <!-- Offer Name-->
                <div class="form-group row">
                    <label for="offer_name" class="col-sm-2 col-form-label"> Name : </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="offer_name" placeholder="Offer Name ..." required>
                    </div>
                </div>

                <!-- Offer Description -->
                <div class="form-group row">
                    <label for="offer_description" class="col-sm-2 col-form-label"> Description : </label>
                    <div class="col-sm-10">
                        <textarea rows="3" cols="20" class="form-control" id="offer_description" placeholder="Offer Description ..." required></textarea>
                    </div>
                </div>

                <!-- Offer Price -->
                <div class="form-group row">
                    <label for="offer_name" class="col-sm-2 col-form-label"> Price : </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="offer-price" placeholder="Offer Price ..." required>
                    </div>
                </div>

                <!-- Offer Type -->
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label"> Type : </label>
                    <div class="col-sm-10">
                       <form>
                            <label class="radio-inline">
                                <input type="radio" name="optradio"> Material
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="optradio"> Service
                            </label>
                        </form>
                    </div>
                </div>

                <!-- Offer Image -->
                <div class="form-group row">
                    <label for="offer-image" class="col-sm-2 col-form-label"> Image : </label>
                    <div class="col-sm-10">
                        <input type="file" class="form-control" id="offer-image" required>
                    </div>
                </div>

                <!-- Submit Button -->
                <button type="button" class="btn btn-primary"> Submit Offer </button>
            </form>
        </div>
    </body>
</html>
