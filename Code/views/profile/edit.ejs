<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>

    <!-- BootSrap -->
    <% include ./../templates/header.ejs %>

    <link rel="stylesheet" type="text/css" href="/stylesheets/profile/edit.css">
</head>
<body>
<% include ./../templates/navbar.ejs %>

<div class="col-md-0 center-align register">
    <h3 class="dark-grey">Editar Perfil</h3>

    <form role="form" action="/login/register" method="post">

        <div class="form-group col-lg-12">
            <label>Nome</label>
            <input type="text" name="name" class="form-control" value="<%= userdata.name %>" placeholder="Nome Completo" required>
        </div>

        <div class="form-group col-lg-12">
            <label>Contacto</label>
            <input type="text" name="contact" class="form-control" value="<%= userdata.phone %>" placeholder="Contacto telefónico" required>
        </div>

        <div class="form-group col-lg-12">
            <label>Data de nascimento</label>
            <input type="datetime" name="birth_date" class="form-control" value="<%= userdata.birth_date %>" placeholder="Data de nascimento" required>
        </div>

        <div class="form-group col-lg-12">
            <label for="sel_sex">Sexo:</label>
            <select class="form-control" id="sel_sex">
                <option <% if(userdata.gender == "Outro"){ %> selected="selected" <% } %> >Outro</option>
                <option <% if(userdata.gender == "Masculino"){ %> selected="selected" <% } %> >Masculino</option>
                <option <% if(userdata.gender == "Feminino"){ %> selected="selected" <% } %> >Feminino</option>
            </select>
        </div>

        <div class="form-group col-lg-6">
            <label>Password</label>
            <input type="password" name="password" class="form-control" value="" placeholder="Password" required>
        </div>

        <div class="form-group col-lg-6">
            <label>Repita Password</label>
            <input type="password" name="password2" class="form-control" value="" placeholder="Password" required>
        </div>

        <div class="form-group col-lg-6">
            <label>Endereço de Email</label>
            <input type="" name="email" class="form-control" value="<%= userdata.email %>" placeholder="Endereço de Email" required>
        </div>

        <div class="form-group col-lg-6">
            <label>Repita o Endereço de Email</label>
            <input type="" name="email2" class="form-control" value="<%= userdata.email %>" placeholder="Endereço de Email" required>
        </div>

        <button type="submit" name="register-submit" id="register-submit" class="btn btn-primary">Guardar</button>
    </form>
</div>

</body>
</html>
