<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>

    <% include templates/header.ejs %>
    <link rel="stylesheet" type="text/css" href="/stylesheets/search_results.css">
</head>
<body>
<% include templates/navbar.ejs %>

<div class="container">
    <h2>Search Results</h2>
    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#community">Community</a></li>
        <li><a data-toggle="tab" href="#users">Users</a></li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane fade in active" id="community">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Type</th>
                    <th>Rating</th>
                </tr>
                </thead>
                <tbody>
                <% for(var index = 0; index < communities.length; index++){ %>
                <tr>
                    <td><a href="#"><%= communities[index].name %></a></td>
                    <td><%= communities[index].description %></td>
                    <td><%= communities[index].category %></td>
                    <td>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star-empty"></span>
                        <span class="glyphicon glyphicon-star-empty"></span>
                        <span class="glyphicon glyphicon-star-empty"></span>
                    </td>
                </tr>
                <% } %>
                </tbody>
            </table>
        </div>
        <div class="tab-pane fade" id="users">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                </tr>
                </thead>
                <tbody>
                <% for(var index = 0; index < users.length; index++){ %>
                <tr>
                    <td><a href="#"><%= users[index].username %></a></td>
                    <td><%= users[index].email %></td>
                </tr>
                <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

</body>
</html>